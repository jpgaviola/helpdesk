@page "/create"
@using Microsoft.AspNetCore.Components
@inject NavigationManager Navigation
@inject HelpdeskBlazor.Services.ISessionService SessionService
@inject HelpdeskBlazor.Services.IAuthorizationService AuthorizationService

<style>
    .create-selection-container {
        padding: 30px;
        background: #f8f9fa;
        min-height: calc(100vh - 80px);
    }

    .page-header {
        background: white;
        padding: 25px 30px;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        margin-bottom: 25px;
        border-left: 4px solid #ff6b35;
    }

    .page-title {
        font-size: 28px;
        font-weight: 700;
        color: #0A1A28;
        margin: 0 0 8px 0;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .page-title i {
        color: #ff6b35;
        font-size: 24px;
    }

    .page-subtitle {
        color: #666;
        font-size: 16px;
        margin: 0;
    }

    .options-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
        gap: 30px;
        max-width: 900px;
        margin: 0 auto;
    }

    .option-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        transition: all 0.3s ease;
        cursor: pointer;
        border: 2px solid transparent;
        text-decoration: none;
        color: inherit;
    }

    .option-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        border-color: #ff6b35;
        text-decoration: none;
        color: inherit;
    }

    .option-header {
        padding: 25px 30px 20px;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-bottom: 1px solid #E7EAEE;
        text-align: center;
    }

    .option-icon {
        font-size: 48px;
        color: #ff6b35;
        margin-bottom: 15px;
        display: block;
    }

    .option-title {
        font-size: 20px;
        font-weight: 600;
        color: #0A1A28;
        margin: 0 0 8px 0;
    }

    .option-subtitle {
        color: #666;
        font-size: 14px;
        margin: 0;
    }

    .option-content {
        padding: 25px 30px 30px;
    }

    .option-description {
        color: #555;
        font-size: 15px;
        line-height: 1.6;
        margin-bottom: 20px;
    }

    .option-features {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .option-features li {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 10px;
        font-size: 14px;
        color: #666;
    }

    .option-features i {
        color: #28a745;
        font-size: 12px;
        width: 16px;
        text-align: center;
    }

    .option-footer {
        padding: 0 30px 25px;
    }

    .option-button {
        width: 100%;
        padding: 12px 20px;
        background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        text-decoration: none;
    }

    .option-button:hover {
        background: linear-gradient(135deg, #f7931e 0%, #e8821a 100%);
        transform: translateY(-1px);
        box-shadow: 0 2px 8px rgba(255, 107, 53, 0.3);
        color: white;
        text-decoration: none;
    }

    @@media (max-width: 768px) {
        .create-selection-container {
            padding: 20px 15px;
        }

        .options-container {
            grid-template-columns: 1fr;
            gap: 20px;
        }

        .option-card {
            min-width: unset;
        }

        .option-header {
            padding: 20px 25px 15px;
        }

        .option-content {
            padding: 20px 25px 25px;
        }

        .option-footer {
            padding: 0 25px 20px;
        }
    }

    .coming-soon-badge {
        display: inline-block;
        background: #ffc107;
        color: #856404;
        font-size: 11px;
        font-weight: 600;
        padding: 4px 8px;
        border-radius: 12px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-left: 10px;
    }

    .option-card.disabled {
        opacity: 0.6;
        cursor: pointer;
    }

    .option-card.disabled:hover {
        transform: none;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        border-color: transparent;
    }

    .option-card.disabled .option-button {
        background: #6c757d;
        cursor: pointer;
    }

    .option-card.disabled .option-button:hover {
        background: #6c757d;
        transform: none;
        box-shadow: none;
    }
</style>

<div class="create-selection-container">

    <!-- Page Header -->
    <div class="page-header">
        <h1 class="page-title">
            <i class="fas fa-plus-circle"></i>
            Create New Request
        </h1>
        <p class="page-subtitle">Choose the type of request you want to create</p>
    </div>

    <!-- Options Container -->
    <div class="options-container">
        <!-- Support Ticket Option -->
        <a href="/tickets/create" class="option-card">
            <div class="option-header">
                <i class="fas fa-ticket-alt option-icon"></i>
                <h2 class="option-title">Ticket Request</h2>
                <p class="option-subtitle">Legal Support & Services</p>
            </div>
            <div class="option-content">
                <p class="option-description">
                    Request legal assistance, contract reviews, legal opinions, or secretary's certificates.
                </p>
                <ul class="option-features">
                    <li>
                        <i class="fas fa-check"></i>
                        Contract Review/Preparation
                    </li>
                    <li>
                        <i class="fas fa-check"></i>
                        Legal Research & Opinion
                    </li>
                    <li>
                        <i class="fas fa-check"></i>
                        Secretary's Certificate
                    </li>
                    <li>
                        <i class="fas fa-check"></i>
                        File attachments support
                    </li>
                    <li>
                        <i class="fas fa-check"></i>
                        Priority-based routing
                    </li>
                </ul>
            </div>
            <div class="option-footer">
                <div class="option-button">
                    <i class="fas fa-arrow-right"></i>
                    Create Ticket Request
                </div>
            </div>
        </a>

        <!-- Corporate Documents Option -->
        <a href="/documents/create" class="option-card">
            <div class="option-header">
                <i class="fas fa-file-alt option-icon"></i>
                <h2 class="option-title">
                    Corporate Documents Request
                </h2>
                <p class="option-subtitle">Official Documents & Forms</p>
            </div>
            <div class="option-content">
                <p class="option-description">
                    Request official corporate documents, forms, certificates, and administrative paperwork.
                </p>
                <ul class="option-features">
                    <li>
                        <i class="fas fa-check"></i>
                        Photocopy
                    </li>
                    <li>
                        <i class="fas fa-check"></i>
                        Certified by the SEC
                    </li>
                    <li>
                        <i class="fas fa-check"></i>
                        Certified by the Corporate Secretary
                    </li>
                    <li>
                        <i class="fas fa-check"></i>
                        Document authentication
                    </li>
                    <li>
                        <i class="fas fa-check"></i>
                        Administrative requests
                    </li>
                </ul>
            </div>
            <div class="option-footer">
                <div class="option-button">
                    <i class="fas fa-arrow-right"></i>
                    Create Document Request
                </div>
            </div>
        </a>
    </div>
</div>

@code {
    protected override void OnInitialized()
    {
        if (!SessionService.IsAuthenticated || SessionService.CurrentUser == null)
        {
            Navigation.NavigateTo("/login");
            return;
        }

        if (!AuthorizationService.CanCreateRequests(SessionService.CurrentUser))
        {
            Navigation.NavigateTo("/unauthorized");
            return;
        }
    }
}